<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView

        android:id="@+id/landingPagePinButton8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:adjustViewBounds="true"
        android:background="@android:color/darker_gray"
        android:clickable="true"
        android:maxWidth="64dp"
        android:minWidth="36dp"
        android:minHeight="36dp"
        android:src="@drawable/seeliger_alexander"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/b19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Alexander Seeliger, Msc"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/b20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Research Assistant"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/b19" />

    <TextView
        android:id="@+id/b21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/status"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/b20" />


    <ImageButton

        android:id="@+id/calendarButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="@drawable/buttonbackground"
        android:clickable="true"
        android:minWidth="36dp"
        android:minHeight="36dp"
        android:radius="4dp"
        android:src="@drawable/ic_calendar_alt"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/landingPagePinButton8"
        app:layout_constraintRight_toRightOf="parent" />

    <LinearLayout
        android:id="@+id/message_inputs"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" >

        <EditText
            android:id="@+id/name_filed"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:hint="Your name"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/email_field"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:hint="Your email"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/message_field"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:ems="10"
            android:inputType="textMultiLine"
            android:text="message" />

        <Button
            android:id="@+id/button_send"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="send"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>